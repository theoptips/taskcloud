<h1>Sessions#new</h1>
<h1>Sign In</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<% if flash[:error] %>
	<p><%= flash[:error] %></p>
<% end %>

<%= simple_form_for(:session, :url => sessions_path) do |f| %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.button :submit %>
<% end %>
