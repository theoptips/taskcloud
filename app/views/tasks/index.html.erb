	<div class="row-fluid">
		<h3 class="color_gray">ToDos</h3>
		<div class="span8 bordered_dashed">
		  	<ul id="ul_tasks">
			<% @tasks.each do |task| %>
			<li>
				<div class="span6">
					<input type="checkbox" />
					<img src="/assets/star.png"><img src="/assets/blank_star.png">

					<%#= task.title%>
					<h6><%= task.title%></h6>
				</div>
				<div>
					<!-- <img id="thumbnail_rails" class="offset3" src="/assets/rails.png"> -->
