				</div>
			</li>
			<% end %>
			</ul>
		</div>

		<div class="span2">
		  <h3 class="color_gray">Categories</h3>
		  <ul>
		  	<% @categories.each do |category| %>
		  	<li><%= link_to category.name, category_path(category.id) %></li>     
		  	<% end %>
		  </ul>
		</div> <!--end of category column-->
